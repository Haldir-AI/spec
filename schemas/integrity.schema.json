{
  "type": "object",
  "properties": {
    "schema_version": {
      "type": "string",
      "enum": [
        "1.0"
      ]
    },
    "algorithm": {
      "type": "string",
      "const": "sha256"
    },
    "files": {
      "type": "object",
      "additionalProperties": {
        "type": "string",
        "pattern": "^sha256:[0-9a-f]{64}$"
      }
    },
    "generated_at": {
      "type": "string",
      "format": "date-time"
    }
  },
  "required": [
    "schema_version",
    "algorithm",
    "files",
    "generated_at"
  ],
  "additionalProperties": false,
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://haldir.ai/schemas/integrity.schema.json",
  "title": "ASAF integrity"
}
