{
  "type": "object",
  "properties": {
    "schema_version": {
      "type": "string",
      "enum": [
        "1.0"
      ]
    },
    "skill": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "version": {
          "type": "string",
          "minLength": 1
        },
        "type": {
          "type": "string",
          "minLength": 1
        }
      },
      "required": [
        "name",
        "version",
        "type"
      ],
      "additionalProperties": false
    },
    "integrity_hash": {
      "type": "string",
      "pattern": "^sha256:[0-9a-f]{64}$"
    },
    "permissions_hash": {
      "type": "string",
      "pattern": "^sha256:[0-9a-f]{64}$"
    },
    "signed_at": {
      "type": "string",
      "format": "date-time"
    },
    "_critical": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  },
  "required": [
    "schema_version",
    "skill",
    "integrity_hash",
    "permissions_hash",
    "signed_at"
  ],
  "additionalProperties": true,
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://haldir.ai/schemas/attestation.schema.json",
  "title": "ASAF attestation"
}
